{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "Docusaurus dependencies",
      "packagePatterns": [
        "^@docusaurus/",
        "^docusaurus-"
      ]
    },
    {
      "groupName": "Serenity/JS dependencies",
      "packagePatterns": [
        "^@serenity-js/",
        "tiny-types"
      ],
      "automerge": true,
      "platformAutomerge": true
    },
    {
      "groupName": "TypeDoc dependencies",
      "packagePatterns": [
        "typedoc",
        "^typedoc-plugin-",
        "typescript"
      ]
    }
  ]
}
